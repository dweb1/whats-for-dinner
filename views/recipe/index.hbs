<div id="topInfo">
	<div>
		<h1>Hello, {{userName}}, are you hungry?</h1>
	</div>
	<div id="wrapper">
		<a href="/user/{{userId}}/recipe/new">
			<button type="button" name="button" class="btn-large teal darken-4" id="CreateNewButton">Create New Recipe</button>
		</a>
	</div>
</div>
<br>
<br>
<div class="recipe-row">
	{{#each recipe}}
		<div class = "recipe">
			<h3>{{this.name}}</h3>
			<div><a href="/user/{{../userId}}/recipe/{{this._id}}"><img class="recipeImage" src="http://fillmurray.com/200/200" alt="Recipe Image"></a></div>
			<a href="/user/{{../userId}}/recipe/{{this._id}}">View more about {{this.name}}</a>
			<br>
		</div>
	{{/each}}
</div>