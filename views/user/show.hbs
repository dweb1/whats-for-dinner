<div class="recipe-row">
	{{#each user.recipes}}
    <div class="row">
      <div class="col s4">
        <div class="card">
          <div class="card-image">
            <img src="{{this.picture}}">
              <span class="card-title">{{this.name}}</span>
          </div>
          <div class="card-action">
            <a href="/user/{{../userId}}/recipe/{{this._id}}"><p class="flow-text">View more about {{this.name}}</p></a>
          </div>
        </div>
      </div>
  {{/each}}
</div>
